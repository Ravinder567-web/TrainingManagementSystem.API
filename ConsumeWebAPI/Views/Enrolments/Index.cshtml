@model List<ConsumeWebAPI.Models.Enrolment>

<h2>Enrolments</h2>

<a asp-action="Create" class="btn btn-success">Add New Enrolment</a>

<table class="table">
    <thead>
        <tr>
            <th>Batch ID</th>
            <th>User ID</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BatchId</td>
                <td>@item.UserId</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
