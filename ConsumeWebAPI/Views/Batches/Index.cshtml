@model List<ConsumeWebAPI.Models.Batch>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Batch List</h2>
        <a asp-controller="Batches" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Course ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var batch in Model)
                    {
                        <tr>
                            <td>@batch.BatchName</td>
                            <td>@batch.StartDate.ToShortDateString()</td>
                            <td>@batch.EndDate.ToShortDateString()</td>
                            <td>@batch.CourseId</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@batch.Id" class="btn btn-primary px-4">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@batch.Id" class="btn btn-danger px-4">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
