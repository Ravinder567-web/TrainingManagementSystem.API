@model List<ConsumeWebAPI.Models.Course>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Course List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i>Create
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.Title</td>
                                <td>@course.Description</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary px-4 py-2">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger px-4 py-2">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No courses available.
                </div>
            }
        </div>
    </div>
</div>
